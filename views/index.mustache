<html>
  <head>
    <title>{{ title }} : {{ selection }}</title>
    <link rel="stylesheet" href="styles/main.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <section class="layout">
      <h1 class="h1 layout__item">Welcome to {{ title }}</h1>
      <small class="layout__item">{{ selection }}</small>
      <p class="layout__item">Please choose from the following Sky products:</p>
    </section>
    <main class="layout">
      <form action="/confirmation" method="post" data-location="undetermined" class="layout u-1/1-lap-and-up u-1/1-portable layout__item product-selection">
        <ul class="layout__item layout--item__block-left u-1/3-lap-and-up u-1/1-portable">
          <li class="h2">Sports</li>
          <li class="not-available">Not available in your area.</li>
          <li class="locale-delegated london"><input name="Arsenal TV" type="checkbox">Arsenal TV</li>
          <li class="locale-delegated london"><input name="Chelsea TV" type="checkbox">Chelsea TV</li>
          <li class="locale-delegated liverpool "><input name="Liverpool TV" type="checkbox">Liverpool TV</li>
        </ul>
        <ul class="layout__item layout--item__block-left u-1/3-lap-and-up u-1/1-portable">
          <li class="h2">News</li>
          <li><input name="Sky News" type="checkbox">Sky News</li>
          <li><input name="Sky Sports" type="checkbox">Sky Sports</li>
        </ul>
        <div class="layout__item layout--item__block-left u-1/3-lap-and-up u-1/1-portable basket">
          <h2 class="h2">Basket</h2>
          <ul class="selected-products">
            <!-- -->
          </ul>
          <input type="hidden" name="customerID">
          <button>Checkout</button>
        </div>
      </form>
    </main>
    <!--http://stackoverflow.com/questions/8567114/how-to-make-an-ajax-call-without-jquery  -->
    <!-- courtesy of @Petah -->
    <!-- Small Ajax Snippet -->
    <script>
    var ajax = {};
        ajax.x = function() {
          if (typeof XMLHttpRequest !== 'undefined') {
              return new XMLHttpRequest();
          }
          var versions = [
              "MSXML2.XmlHttp.6.0",
              "MSXML2.XmlHttp.5.0",
              "MSXML2.XmlHttp.4.0",
              "MSXML2.XmlHttp.3.0",
              "MSXML2.XmlHttp.2.0",
              "Microsoft.XmlHttp"
          ];

          var xhr;
          for(var i = 0; i < versions.length; i++) {
              try {
                  xhr = new ActiveXObject(versions[i]);
                  break;
              } catch (e) {
              }
          }
          return xhr;
        };

        ajax.send = function(url, callback, method, data, sync) {
          var x = ajax.x();
          x.open(method, url, sync);
          x.onreadystatechange = function() {
              if (x.readyState == 4) {
                  callback(x.responseText)
              }
          };
          if (method == 'POST') {
              x.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
          }
          x.send(data)
        };

        ajax.get = function(url, data, callback, sync) {
          var query = [];
          for (var key in data) {
              query.push(encodeURIComponent(key) + '=' + encodeURIComponent(data[key]));
          }
          ajax.send(url + (query.length ? '?' + query.join('&') : ''), callback, 'GET', null, sync)
        };

        ajax.post = function(url, data, callback, sync) {
          var query = [];
          for (var key in data) {
              query.push(encodeURIComponent(key) + '=' + encodeURIComponent(data[key]));
          }
          ajax.send(url, callback, 'POST', query.join('&'), sync)
        };
    </script>
    <!-- End of snippet -->
    <script src="scripts/bundle.js"></script>
  </body>
</html>
